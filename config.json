{
    "save_dir": "release_model/",
    "seed": 2020,
    "model": {
        "name": "gatedTPgan",
        "nc_in": 4,
        "nc_out": 3,
        "g_args": {
            "nf": 64,
            "norm": "SN",
            "bias": true,
            "conv_type": "gated",
            "conv_by": "3d"
        }
    },
    "data_loader": {
        "name": "places2", 
        "zip_root": "../datazip",
        "list_root": "../flist",
        "w": 512,
        "h": 512,
        "batch_size": 8,
        "num_workers": 4
    },
    "losses": [
        {
            "type": "ReconLoss",
            "weight": 1.0,
            "nickname": "valid",
            "input": "RGB",
            "args": {
                "masked": false
            }
        },
        {
            "type": "ReconLoss",
            "weight": 6.0,
            "nickname": "hole",
            "input": "RGB",
            "args": {
                "masked": true
            }
        },
        {
            "type": "VGGLoss",
            "weight": 0.1,
            "nickname": "tv",
            "input": "feat",
            "args": {}
        },
        {
            "type": "StyleLoss",
            "weight": 0.05,
            "nickname": "prc",
            "input": "feat",
            "args": {}
        },
        {
            "type": "StyleLoss",
            "weight": 120,
            "nickname": "loss_style",
            "input": "feat",
            "args": {}
        }
    ],
    "metrics": [
        "rmse",
        "psnr",
        "ssim"
    ],
    "optimizer": {
        "type": "Adam",
        "lr": 0.00005,
        "weight_decay": 0,
        "amsgrad": true
    },
    "lr_scheduler": {
        "type": "StepLR",
        "step_size": 1000,
        "gamma": 0.97
    },
    "trainer": {
        "epochs": 150,
        "save_freq": 5,
        "verbosity": 2,
        "monitor": "test0_p_dist",
        "monitor_mode": "min",
        "mask_only": true,
        "pretrained_load_strict": false
    },
    "logger": {
        "log_step": 100,
        "tensorboardX": true
    }
}
